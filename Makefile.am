DEFS   = -DLANGDIR=\"@localedir@\"

ACLOCAL_AMFLAGS = -I m4
DISTCLEANFILES =

docdir = $(datadir)/doc/$(PACKAGE)-$(VERSION)
dist_doc_DATA = Changes INSTALL LICENSE

#SUBDIRS = . libracode libidn docs po
SUBDIRS = . libidn docs po

AM_CFLAGS = -Wall
include_HEADERS = i18n.h tld_server.h

bin_PROGRAMS = kwhois
kwhois_SOURCES = whois.c i18n.c
EXTRA_DIST = kwhois.spec

install-data-hook:
	cd $(DESTDIR)$(bindir); \
	ln -sf kwhois whois; \
	cd -

test-install:
	$(MAKE) DESTDIR=`pwd`/z install
