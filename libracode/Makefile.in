# $Id$
CC		= @CC@
prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
mandir		= @mandir@
datadir		= @datadir@
LANGDIR		= @datadir@/locale
CFLAGS		= -Wall @CFLAGS@
LDFLAGS		= @LDFLAGS@ @LIBS@
DEFS		= @DEFS@ -I. -I.. -DLANGDIR=\"$(LANGDIR)\"
SOURCE		= race.c
OBJECT		= i18n.o main.o
OBOPT		= -Wall $(DEFS) -DPVERSION=\"@PACKAGE_VERSION@\"

RM		= @RM@ -f

all: $(OBJECT)
	$(CC) $(LDFLAGS) -DLANGDIR=\"$(LANGDIR)\" $(OBJECT) -o raceconv $(LDFLAGS)

i18n.o: ../i18n.c ../config.h
	$(CC) $(OBOPT) $(CFLAGS) -DLANGDIR=\"$(LANGDIR)\" -c ../i18n.c

main.o: ../config.h main.c
	$(CC) $(OBOPT) $(CFLAGS) -c main.c

clean:
	$(RM) *.o *~ raceconv
